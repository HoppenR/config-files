#
# ~/.inputrc
# /root/.inputrc
#

set editing-mode vi
set show-mode-in-prompt on
set vi-cmd-mode-string \1\e[38;5;50m\2:\1\e[0m\2
set vi-ins-mode-string \1\e[38;5;50m\2+\1\e[0m\2
set show-all-if-ambiguous on
set completion-ignore-case on
set colored-stats on
TAB:menu-complete
set keymap vi-command
":":"i\e.\eBhx\eOFa"
set keymap vi-insert
"\e[Z":menu-complete-backward
"\e.":yank-last-arg
"\C-a":beginning-of-line
"\C-e":end-of-line
"\C-l":clear-screen
"ยง":shell-expand-line
"#":insert-comment
